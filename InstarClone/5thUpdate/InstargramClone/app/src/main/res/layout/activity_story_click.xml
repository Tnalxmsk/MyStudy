<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="10dp">

    <SeekBar
        android:id="@+id/sb_story_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/seekbar_custom"
        android:thumb="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_SCV_profile_image"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:background="#00FF0000"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_profile_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sb_story_time" />

    <TextView
        android:id="@+id/tv_SCV_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="name"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ib_SCV_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/sb_story_time" />

    <TextView
        android:id="@+id/tv_SCV_upload_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="time"
        android:textColor="#7C7C7C"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tv_SCV_user_id"
        app:layout_constraintTop_toBottomOf="@+id/sb_story_time" />

    <ImageButton
        android:id="@+id/ib_more_option"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginTop="30dp"
        android:background="#00FF0000"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_post_more_option_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sb_story_time" />

    <ImageButton
        android:id="@+id/ib_SCV_story_image"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_marginTop="36dp"
        android:background="#00FF0000"
        android:scaleType="fitCenter"
        android:src="@drawable/image_neck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_SCV_profile_image" />

    <EditText
        android:id="@+id/et_story_dm"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_round_story_dm"
        android:hint="메시지 보내기"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_SCV_story_image" />

    <ImageButton
        android:id="@+id/ib_SCV_heart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#00FF0000"
        android:src="@drawable/ic_heart_white"
        app:layout_constraintEnd_toStartOf="@+id/ib_SCV_share"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/et_story_dm"
        app:layout_constraintTop_toBottomOf="@+id/ib_SCV_story_image" />

    <ImageButton
        android:id="@+id/ib_SCV_share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="#00FF0000"
        android:src="@drawable/ic_share_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_SCV_story_image" />


</androidx.constraintlayout.widget.ConstraintLayout>